<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgImageHistory"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/barber" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLocationHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Cơ sở: 1028 Đường Láng"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvTimeHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Thời gian 8h00 | Ngày 21/02/2020"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvStylistHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Stylist: Hoàng Đức Long"
                android:textColor="@color/colorBlack" />


            <TextView
                android:id="@+id/tvServiceHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Dịch vụ: VipCombo"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>